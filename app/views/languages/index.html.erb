<% if flash[:alert] %>
  <div class="flash-notice">
    <%= javascript_tag "alert('User profile successfully updated.')" %>
  </div>
<% end %>

<div class="languages">
  <div class="languages-tagline">
    <h2>Languages</h2>
    <br>
    <p>We offer quite a few of fun and intuitive modules on different programming languages</p>
    <p>Pick your favorite and start coding today!</p>
  </div>

  <br>




<%# ---------- The languages selction accordion starts here ----------%>
  <div class="gurjant">
    <% @languages.each do | language| %>
    <ul class="accordion">
      <%# --- The Ruby accordion begins%>
      <li class="sub-accordion">
        <a class="toggle title" href="javascript:void(0);"><%=language.name.capitalize %></a>
        <ul class="inner">
          <% language.chapters.each do | chapter| %>
          <li>
            <a href="#" class="toggle sub-title">Chapter <%=chapter.id%> : <%=chapter.name %>
              <% if is_chapter_completed(chapter.id) %>
                âœ” 
              <% end %>
           </a>
            <div class="inner content">
              <p><%=chapter.description%></p>
              <a class="start-button" href= "<%=language_chapter_step_path(language.id,chapter.id,chapter.steps.first.id)%>" type="button" name="button">Start Now</a>
            </div><%# class "inner content" ends %>
            <% end %>
          </li>
        </ul><%# class "inner" ends here %>
      </li><%# class "sub-accordion" ends here %>
    </ul><%# class "accordion" ends here %>
  </div><%# class "gurjant" ends here %>
  <% end %>
</div><%# class "languages" ends here %>
