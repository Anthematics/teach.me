<h1>Chapter <%=@chapter.id%> : <%= @chapter.name %></h1>

<%= form_for [:instructors, @language, @chapter] do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h1>Steps </h1>

<% @chapter.steps.each do |step| %>
 <%=step.id%> <%= step.name %> | <%=link_to "Edit", edit_instructors_language_chapter_step_path(@language.id,@chapter.id,step.id)%>
 <br>
<% end %>
