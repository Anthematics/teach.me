<nav aria-label="breadcrumb" role="navigation">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/instructors/languages">Instructor Home</a></li>
    <li class="breadcrumb-item"><a href="/instructors/languages/<%=@current_language.id%>/edit">Language</a></li>
    <li class="breadcrumb-item" aria-current="page"><a href="/instructors/languages/<%=@current_language.id%>/chapters/<%=@chapter.id %>/edit">Chapter</a></li>
    <li class="breadcrumb-item active" aria-current="page">Step</li>
  </ol>
</nav>


<div class="instructors-steps-edit">
  <h2>Steps <%=@step.id%> : <%= @step.name %></h2>
  <br>
  <%= form_for [:instructors, @language, @chapter, @step] do |f| %>
    <p>
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </p>
    <br>
    <p>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Update Step Description', class: 'btn btn-primary instructors-update-button' %>
    </p>
  <% end %>
  <br>
  <p>----------------------------------------</p>
  <br>
  <div class="edit-step-menu">
    <h3>CodeTest for <%=@step.name%></h3>
    <br>
    <% @step.code_tests.each do |test| %>
      <p>
        <%=test.id%>.)  Test Input: <%= test.input %> Test Output: <%= test.output %>  |  <%=link_to "Edit", edit_instructors_language_chapter_step_code_test_path(@language.id,@chapter.id,@step.id,test.id)%>
      </p>
      <br>
      <% end %>
  </div>

</div>
